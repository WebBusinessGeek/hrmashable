  <% blogs.each do |blog| %>
    <div class='row-fluid'>
      <div class='span12'>
        <%= link_to image_tag(blog.main_pic.url, width: '100%'), blog_path(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) if blog.main_pic.present? %>
      </div>
    </div>
    <div class='row-fluid'>
      <div class='span12'>
        <%= link_to blog.category.title.upcase, category_path(blog.category.slug) if blog.category.present? %>
      </div>
    </div>
    <div class='row-fluid'>
      <div class='span12'>
        <%= link_to blog.title, blog_path(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) if blog.title.present? %>
      </div>
    </div>
    <div class='row-fluid'>
      <div class='span12'>
        </br>
        <a href="<%= blog_path(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) %>">
          <span class='st_facebook_hcount' displayText='Share' st_title="<%= blog.title %>" st_url="<%= blog_url(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) %>" st_summary="<%= simple_format(blog.description) if blog.description.present? %>" st_image="<%= blog.main_pic.url if blog.main_pic.present? %>"></span>
          <span class='st_twitter_hcount' displayText='Tweet' st_title="<%= blog.title %>" st_url="<%= blog_url(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) %>" st_summary="<%= simple_format(blog.description) if blog.description.present? %>" st_image="<%= blog.main_pic.url if blog.main_pic.present? %>"></span>
          <span class='st_googleplus_hcount' displayText='Share' st_title="<%= blog.title %>" st_url="<%= blog_url(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) %>" st_summary="<%= simple_format(blog.description) if blog.description.present? %>" st_image="<%= blog.main_pic.url if blog.main_pic.present? %>"></span>
        </a>
      </div>
    </div>
  <% end %>

  <%= will_paginate @center_blogs %>