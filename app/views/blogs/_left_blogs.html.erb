  <% blogs.each do |blog| %>
    <div class='row-fluid'>
      <div class='span3'>
        <%= link_to image_tag(blog.main_pic.url, width: '100%'), blog_path(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) if blog.main_pic.present? %>
      </div>
      <div class='span9'>
        <div class='row-fluid'>
          <div class='span12'>
            <%= link_to blog.title.upcase, blog_path(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) if blog.title.present? %>
          </div>
        </div>
        <div class='row-fluid'>
          <div class='span12'>
            <a href="<%= blog_path(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) %>">
              <span class='st_sharethis_hcount' displayText='Share' st_title="<%= blog.title %>" st_url="<%= blog_url(blog.created_at.strftime('%Y'), blog.created_at.strftime('%m'), blog.created_at.strftime('%d'), blog.slug) %>" st_summary="<%= simple_format(blog.description) if blog.description.present? %>" st_image="<%= blog.main_pic.url if blog.main_pic.present? %>"></span> / <%= last_updated_at(blog.updated_at) %>
            </a>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= will_paginate @left_blogs %>